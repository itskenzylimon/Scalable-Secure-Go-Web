# Go Fiber settings
APP_PORT=3000
ENVIRONMENT=development

# CORS
FRONTEND_ORIGINS=https://app.myfrontend.com,https://admin.myfrontend.com
CORS_ALLOW_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1m

# Security toggles
ENABLE_HELMET=true
ENABLE_RATE_LIMITER=true

# Logging
LOG_TO_FILE=false

# Database config (Choose ONE block to enable)
# PostgreSQL
# DB_DRIVER=postgres
# DB_DSN=host=localhost user=postgres password=secret dbname=catalog port=5432 sslmode=require TimeZone=UTC

# MySQL
# DB_DRIVER=mysql
# DB_DSN=root:root@tcp(127.0.0.1:3306)/catalog?charset=utf8mb4&parseTime=True&loc=Local&tls=true

# SQLite (default)
DB_DRIVER=sqlite
DB_DSN=./catalog.db